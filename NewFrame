    private void addBTNActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_addBTNActionPerformed
        Add.show();
    }//GEN-LAST:event_addBTNActionPerformed

    private void SearchBTNActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_SearchBTNActionPerformed
           resValue = data.getWord(inputSearch.getText());
           
           if(resValue.equals("Nodata")|| resValue == "null"){
               showWord.setText("ไม่พบผลลัพธ์");
               deleteBTN.setEnabled(false);
               editBTN.setEnabled(false);
           }else{
               showWord.setText(resValue);
               word = inputSearch.getText();
               value = resValue;
               deleteBTN.setEnabled(true);
               editBTN.setEnabled(true);
           }
    }//GEN-LAST:event_SearchBTNActionPerformed

    private void addSaveBTNActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_addSaveBTNActionPerformed
        data.AddWord(inputAddWord.getText(), inputAddValue.getText());
            int input = JOptionPane.showConfirmDialog(null,
                "เพิ่มข้อมูลแล้ว!", "แจ้งเตือน", JOptionPane.DEFAULT_OPTION);
        inputAddWord.setText(null);
        inputAddValue.setText(null);
        Add.dispose();
    }//GEN-LAST:event_addSaveBTNActionPerformed

    private void editBTNActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_editBTNActionPerformed
         Edit.show();
         inputEditWord.setText(word);
         inputEditValue.setText(value);
    }//GEN-LAST:event_editBTNActionPerformed

    private void editSaveBTNActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_editSaveBTNActionPerformed
        data.EditWord(inputEditWord.getText(), inputEditValue.getText());
        int input = JOptionPane.showConfirmDialog(null,
                "แก้ไขข้อมูลแล้ว!", "แจ้งเตือน", JOptionPane.DEFAULT_OPTION);
        inputSearch.setText(inputEditWord.getText());
        showWord.setText(inputEditValue.getText());
        inputAddValue.setText(null);
        Edit.dispose();
    }//GEN-LAST:event_editSaveBTNActionPerformed

    private void inputEditWordActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_inputEditWordActionPerformed
        // TODO add your handling code here:
    }//GEN-LAST:event_inputEditWordActionPerformed

    private void deleteBTNActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_deleteBTNActionPerformed
       int input = JOptionPane.showConfirmDialog(null,"คุณแน่ใจหรือไม่ที่จะลบข้อมูล?", "แจ้งเตือน",
            JOptionPane.OK_CANCEL_OPTION);
        // 0=yes, 1=no, 2=cancel
        if(input == 0){
            data.DeleteWord(word);
            input = JOptionPane.showConfirmDialog(null,
                "ลบข้อมูลแล้ว!", "แจ้งเตือน", JOptionPane.DEFAULT_OPTION);
            showWord.setText(null);
            inputSearch.setText(null);
            deleteBTN.setEnabled(false);
            word = null;
            value = null;
        }
    }//GEN-LAST:event_deleteBTNActionPerformed

